<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--The 3 attributes that my note gonna have on the listview on the activity_main-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/list_note_tittle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tittle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/list_note_date"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Test Date"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/list_note_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Test content"
        />

</LinearLayout>
